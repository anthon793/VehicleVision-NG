BREVO_API_KEY=your-brevo-api-key
DEFAULT_FROM_EMAIL=noreply@example.com
DEFAULT_FROM_NAME=Vehicle Detection System
BREVO_TEMPLATE_ID=1
# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/stolen_vehicle_db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Model Paths
VEHICLE_MODEL_PATH=../models/yolov8n.pt
PLATE_MODEL_PATH=../models/yolov8_plate.pt

# Detection Settings
DETECTION_CONFIDENCE=0.5
FRAME_SKIP=5


# Roboflow API Key for License Plate Detection
# Get your free API key at: https://app.roboflow.com/settings/api
ROBOFLOW_API_KEY=your-roboflow-api-key

# Roboflow Workflow (optional, preferred)
ROBOFLOW_WORKSPACE=stolencarrecovery
ROBOFLOW_WORKFLOW=ngplates
ROBOFLOW_USE_WORKFLOW=true